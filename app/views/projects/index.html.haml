- title "Projects"

%table
  %tr
    %th Name
    %th Site url
    %th Description
    %th Email
    %th Company
    %th Company url
  - for project in @projects
    %tr
      %td= h project.name
      %td= h project.site_url
      %td= h project.description
      %td= h project.email
      %td= h project.company
      %td= h project.company_url
      %td= link_to 'Show', project
      %td= link_to 'Edit', edit_project_path(project)
      %td= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Project", new_project_path
